---
import Header from "../components/Header.astro";
import DynamicIsland from "../components/DynamicIsland.astro";

const timeline = [
  { date: "Summer 2025", title: "Game Design Intern — 505 Games (Avantgarden), Milan", blurb: "Prototyping and documentation for an upcoming launch. Narrative flows, world map splines." },
  { date: "May 2025",   title: "Volunteer — GamesBeat Summit, Los Angeles", blurb: "Registration and speaker coordination." },
  { date: "Mar 2025",   title: "Volunteer — GamesBeat Crossfire Lounge, San Francisco", blurb: "GDC week check-in and networking." },
  { date: "Summer 2024",title: "Game Design Intern — 505 Games (Avantgarden), Milan", blurb: "UE5 cave pieces and dungeon maps. QA on Brothers remake. Narrative plugin states." },
  { date: "2023",       title: "Unity 3D — Gunslinger Hilda", blurb: "Enemy AI states and power-ups in team combat prototype." },
  { date: "2023",       title: "Unity 2.5D — Neon Navigator", blurb: "Level flow, encounters, and energy-based weapon loop." },
  { date: "2022–2025",  title: "B.S. Computer Science — Cal Poly Pomona", blurb: "Data structures, algorithms, systems, OOP, game dev, C and C++." }
];
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>About • Luca Ficano Latimer</title>
    <meta name="description" content="About, timeline, and resume." />
    <link rel="stylesheet" href="/site.css">
  </head>
  <body>
    <Header />
    <DynamicIsland />
    <main class="container" style="max-width:960px">
      <h1>About</h1>
      <p>
        I study computer science and build small but polished game projects.
        I enjoy graphics, input feel, and performance profiling. I have experience in Unity and Unreal,
        including an Italian language internship team in Milan.
      </p>
      <div style="margin:20px 0; display:flex; gap:12px; flex-wrap:wrap;">
        <a class="btn primary" href="/cv.pdf" target="_blank" rel="noreferrer">Open resume</a>
        <a class="btn" href="/projects">View projects</a>
      </div>

      <h2>Timeline</h2>
      <ol style="list-style:none; margin:0; padding:0; position:relative;">
        <div style="position:absolute; left:10px; top:0; bottom:0; width:2px; background: var(--border);"></div>
        {timeline.map((item, i) => (
          <li style="display:flex; gap:16px; margin:18px 0;">
            <div style="width:22px; height:22px; border-radius:9999px; background: var(--accent); box-shadow: 0 0 0 4px rgba(96,165,250,.12)"></div>
            <div>
              <div class="kicker">{item.date}</div>
              <details style="border:1px solid var(--border); border-radius:12px; padding:10px 12px; background: var(--bg-soft)" {i === 0 ? 'open' : ''}>
                <summary style="cursor:pointer; font-weight:600">{item.title}</summary>
                <p style="margin:8px 0 6px">{item.blurb}</p>
              </details>
            </div>
          </li>
        ))}
      </ol>
    </main>
  </body>
</html>
